[flake8]
ignore = E203, E266, E501, W503, W605, E302
max-line-length = 120
select = B,C,E,F,W,T4,B9
exclude =
    # No need to traverse the git directory
    .git,
    # There's no value in checking cache directories
    __pycache__,
    # The conf file is mostly autogenerated, ignore it
    docs/sphinx/source/conf.py,
    # No need for init and setup files
    *__init__.py
    *setup.py
    # Ignore auto-generated python libraries
    python_src/f90wrapTemplate_pyf90/*
    python_src/f90wrapTemplate_pyf90_cs/*
